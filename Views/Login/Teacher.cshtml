
@{
    ViewData["Title"] = "Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Teacher" asp-controller="Login">
    <table class="table" style="width:50%;margin-left:25%;margin-top:25%;">
        <tr>
            <th colspan="2"><h1 style="text-align:center">LOGİN TEACHER</h1></th>
        </tr>
        <tr>
            <th>
                Username:
            </th>
            <td>
                <input type="text" class="form-control" placeholder="Enter username" name="username" />
            </td>
        </tr>
        <tr>
            <th>
                Password:
            </th>
            <td>
                <input type="password" class="form-control" placeholder="Enter password" name="password" />
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
            <input type="submit" value="LOGIN" class="btn btn-outline-success"  />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @TempData["error"]
            </td>
        </tr>
    </table>
</form>
