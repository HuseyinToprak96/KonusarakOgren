@model KonusarakOgren.Models.Teacher

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profile</h1>


<div class="container mt-3">
    <h2>@Model.Name @Model.LastName</h2>
    <br>
    <!-- Nav pills -->
    <ul class="nav nav-pills" role="tablist">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="pill" href="#menu1">Student List</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="pill" href="#menu2">Exams</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      
        <div id="menu1" class="container tab-pane fade">
            <br>
            <h3>Student List</h3>
            <table class="table" style="width:40%">
                <tr>
                    <th>Title</th>
                    <th>Date Time</th>
                </tr>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>@item.Name @item.LastName</td>
                        <td>@item.UserName</td>

                    </tr>

                }
            </table>
        </div>
        <div id="menu2" class="container tab-pane fade">
            <br>
            <h3>Exam List</h3>
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Date Time</th>
                    <th>Paragraphs</th>
                </tr>
                @foreach (var item in Model.CreatedExams)
                {
                    <tr>
                        <td>@item.ExamTitle</td>
                        <td>@item.dateTime</td>
                        <td>@item.ExamParagraph</td>
                    </tr>
}
            </table>
        </div>
    </div>
</div>


